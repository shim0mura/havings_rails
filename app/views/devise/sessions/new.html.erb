<h3 class="text-center page-title-header">ログイン</h3>

<% flash.each do |key, value| %>
  <h5 class="text-center alert alert-<%= key %>">
    <%= value %>
  </h5>
<% end %>

<section class="mdl-grid section--center">

  <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title">
      <h4 class="mdl-card__title-text">メールアドレスでログイン</h4>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mdl-card__supporting-text">

      <div class="text-field mdl-textfield mdl-js-textfield mdl-textfield--floating-label field">
        <%= f.label :email, "メールアドレス", class: "mdl-textfield__label" %>
        <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
      </div>

      <div class="text-field mdl-textfield mdl-js-textfield mdl-textfield--floating-label field">
        <%= f.label :password, "パスワード", class: "mdl-textfield__label" %>
        <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
      </div>

      <%# if devise_mapping.rememberable? -%>
      <% if false -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="sample3" />
          <label class="mdl-textfield__label" for="sample3">Text...</label>
        </div>
      <% end %>

    </div>
    <div class="mdl-card__actions">
      <div class="actions text-center">
        <%= f.submit "ログイン", class: "mdl-button--accent mdl-button mdl-js-button mdl-js-ripple-effect" %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title">
      <h4 class="mdl-card__title-text">他のサービスアカウントでログイン</h4>
    </div>
    <div class="mdl-card__supporting-text text-center">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "#{provider.to_s}でログイン", omniauth_authorize_path(resource_name, provider), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button-#{provider.to_s}" %><br /><br />
        <% end -%>
      <% end -%>

    </div>
  </div>
</section>


  <h6 class="text-center">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "新規登録はこちらから", new_registration_path(resource_name) %><br />
    <% end -%>
  </h6>

<%# render "devise/shared/links" %>
